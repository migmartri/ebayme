#login-box
  - form_tag session_path do
    .field
      = label_tag 'login', "Nick"
      %br/
      = text_field_tag 'login', @login, :size => 17, :tabIndex => 1

    .field
      = label_tag 'password'
      %br/
      = password_field_tag 'password', nil, :size => 17, :tabIndex => 2
      
    .field.text-center
      = submit_tag 'Log in', :tabIndex => 3